{
  "name": "project2hed",
  "version": "1.0.0",
  "description": "Project 2 Starter",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "lint": "standard --global describe --global fetch --global alert --global beforeEach --verbose | snazzy",
    "fix": "standard --fix .",
    "pretest": "knex migrate:latest --env staging",
    "test": "npm run lint && cross-env NODE_ENV=staging mocha -u bdd --reporter spec --exit"
  },
  "license": "ISC",
  "dependencies": {
    "chai-as-promised": "^7.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "express-handlebars": "^3.1.0",
    "knex": "^2.4.0",
    "mysql": "^2.12.0",
    "nodemon": "^1.19.1",
    "snazzy": "^8.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^5.2.0",
    "mocha": "^6.1.4",
    "standard": "^12.0.1"
  },
  "standard": {
    "ignore": [
      "/seeds",
      "/migrations",
      "/test/*.js",
      "tmp.js"
    ],
    "global": [
      "describe",
      "it",
      "beforeEach",
      "fetch",
      "const",
      "alert"
    ]
  }
}
